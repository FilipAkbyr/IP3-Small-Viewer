<div>
    <a class="btn btn-primary" href="insert.php">Vytvořit Zaměstnance</a>
</div>
<table class="table table-striped mt-3">
    <tr>
        <th>Jméno</th>
        <th>Příjmení</th>
        <th>Práce</th>
        <th>Plat</th>
        <th>Místnost</th>
        <th>Login</th>
        <th colspan="2">Akce</th>
    </tr>
    {{#employees}}
        <tr>
            <td><a href="detail.php?employee_id={{employee_id}}">{{name}}</a></td>
            <td>{{surname}}</td>
            <td>{{job}}</td>
            <td>{{wage}}</td>
            <td>{{room}}</td>
            <td>{{login}}</td>

            <td>
                <form method="get" action="update.php">
                    <input type="submit" value="Upravit" class="btn btn-info">
                    <input type="hidden" name="employee_id" value="{{employee_id}}">
                </form>
            </td>
            <td>
                <form method="post" action="delete.php">
                    <input type="submit" value="Smazat" class="btn btn-danger" onclick="return confirm('Opravdu chcete smazat zaměstnance?')">
                    <input type="hidden" name="employee_id" value="{{employee_id}}">
                </form>
            </td>
        </tr>
    {{/employees}}
</table>
