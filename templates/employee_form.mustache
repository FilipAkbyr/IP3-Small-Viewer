<h2>
    {{#employee.employee_id}}Upravit zaměstnance{{/employee.employee_id}}
    {{^employee.employee_id}}Založit zaměstnance{{/employee.employee_id}}
</h2>
<form method="post">
    <!--    id-->
    <input type="hidden" name="employee_id" value="{{employee.employee_id}}">

    <!--    name-->
    <div class="form-group">
        <label for="name">Jméno</label>
        <input type="text" class="form-control" id="name" name="name" value="{{employee.name}}" required>
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <!--    phone-->
    <div class="form-group">
        <label for="phone">Příjmení</label>
        <input type="text" class="form-control" id="surname" name="surname" value="{{employee.surname}}">
        {{#errors.surname}}<div class="d-block invalid-feedback">{{errors.surname}}</div>{{/errors.surname}}
    </div>
    <!--    no-->
    <div class="form-group">
        <label for="no">Práce</label>
        <input type="text" class="form-control" id="job" name="job"  value="{{employee.job}}" required>
        {{#errors.job}}<div class="d-block invalid-feedback">{{errors.job}}</div>{{/errors.job}}
    </div>
    <div class="form-group">
        <label for="no">Výplata</label>
        <input type="text" class="form-control" id="wage" name="wage"  value="{{employee.wage}}" required>
        {{#errors.wage}}<div class="d-block invalid-feedback">{{errors.wage}}</div>{{/errors.wage}}
    </div>
    <div class="form-group">
        <label for="no">Místnost</label>
        <input type="text" class="form-control" id="room" name="room"  value="{{employee.room}}" required>
        {{#errors.room}}<div class="d-block invalid-feedback">{{errors.room}}</div>{{/errors.room}}
    </div>
    <div class="form-group">
        <label for="no">Login</label>
        <input type="text" class="form-control" id="login" name="login"  value="{{employee.login}}" required>
        {{#errors.login}}<div class="d-block invalid-feedback">{{errors.login}}</div>{{/errors.login}}
    </div>
    <div class="form-group">
        <label class="form-check-label" for="no">Admin</label>
        <input type="checkbox" class="form-check-input" id="admin" name="admin"  value="true">
        {{#errors.admin}}<div class="d-block invalid-feedback">{{errors.admin}}</div>{{/errors.admin}}
    </div>
    <div class="form-group">
        <label for="no">Heslo</label>
        <input type="text" class="form-control" id="pass" name="pass" required>
        {{#errors.pass}}<div class="d-block invalid-feedback">{{errors.pass}}</div>{{/errors.pass}}
    </div>
    <div>
        {{#rooms}}
            <input type="checkbox" id="rooms{{room_id}}" name="rooms[]" value="{{room_id}}" {{#checked}}checked{{/checked}}>
            <label for="rooms{{room_id}}">{{name}}</label>
            <br>
        {{/rooms}}

    </div>

    <!--tlacitko-->
    <button type="submit" class="btn btn-info mt-3">Odeslat</button>
</form>